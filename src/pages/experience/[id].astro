---
import { experienceData } from '../../data/Scholarship'
import Layout from '../../layouts/Layout.astro';
import { SectionPageComponent } from '../../components/SectionPageComponent';

export async function getStaticPaths() {
  return [
    { params: { id: 'brightcoders' } },
    { params: { id: 'roboyo' } },
    { params: { id: 'freeway' } }
  ];
}

const { id } = Astro.params;
const experience = experienceData.find((exp) => exp.id === id);
---
<Layout title="My portfolio.">
  <SectionPageComponent info={experience} />
</Layout>